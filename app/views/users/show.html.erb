<div class="container profile-show ">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="profile-pictue-show">
        <% if @user.photo? %>
        <%= cl_image_tag @user.photo.path, width: 300, height: 300, crop: :fill %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
    <% if @user.first_name  %>
      <h4>First Name: <%= @user.first_name.capitalize %></h4>

      <br>
      <h4>Last Name: <%= @user.last_name.capitalize %></h4>
      <% end %>
      <br>
      <h4> <%= @user.email %></h4>
      <br>
      <h4> <%= link_to "Edit profile", edit_user_path(@user) %></h4>
    </div>
  </div>
</div>


