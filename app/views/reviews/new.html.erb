<div class="review-form">
<div class="container">
  <div class="row">
    <h1 class="text-center">Add a Review</h1>

    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <%= simple_form_for [ @gadget, @review] do |f| %>
       <%= f.error_notification %>
        <%= f.input :context %>
        <%= f.input :rating %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
</div>
