<div class="wrapper">

  <div class="row">
  <div class="banner background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path 'background.jpg'%>);">
        <div class="container">
    <h1 class="text-center">Add a Review</h1>

    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <%= simple_form_for [ @gadget, @review] do |f| %>
      <%= f.error_notification %>
      <br>
      <%= f.input :context %>
      <br>
      <%= f.input :rating %>
      <br>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
</div>
